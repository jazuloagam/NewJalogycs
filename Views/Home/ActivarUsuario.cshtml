
@{
    ViewBag.Title = "ActivarUsuario";
    Layout = "~/Views/Shared/_LayoutSinSesion.cshtml";
}

    <div id="app-activarusuario">
        <header class="header__pantallaprincipal">
            <div>
                <a href=""><i class="fa fa-user"></i><span>ACTIVAR USUARIO</span></a>
            </div>
        </header>
        <section class="section__table">
            <el-form :model="ruleForm" :rules="rules" ref="ruleForm" label-width="auto" class="ruleForm section__center">
                <section class="w50">
                    <el-form-item class="label_white" label="Nombres" prop="nombres">
                        <el-input v-model="ruleForm.nombres"></el-input>
                    </el-form-item>
                    <el-form-item class="label_white" label="Apellidos" prop="apellidos">
                        <el-input v-model="ruleForm.apellidos"></el-input>
                    </el-form-item>
                    <el-form-item class="label_white" label="Usuario" prop="usuario">
                        <el-input v-model="ruleForm.usuario"></el-input>
                    </el-form-item>
                    <el-form-item class="label_white" label="Contraseña" prop="password">
                        <el-input type="password" v-model="ruleForm.password"></el-input>
                    </el-form-item>
                    <el-form-item class="label_white" label="Confirmar contraseña" prop="confirmpassword">
                        <el-input v-model="ruleForm.confirmpassword"></el-input>
                    </el-form-item>
                </section>
            </el-form>
        </section>
        <section class="section__boton">
            <div>
                <el-button size="small" type="success" v-on:click="activarusuario('ruleForm')">
                    Activar Usuario
                </el-button>
            </div>
        </section>


